<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Eat-Da-Burger!</h1>
        <p class="lead">The restaurant app that lets you input the names of burgers you'd like to eat!</p>
        <img src="http://pngimg.com/uploads/burger_sandwich/burger_sandwich_PNG4114.png" width="200" class="burgerImg"
            alt="burger">
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <h1>Burgers</h1>
        <ul class="list-group currentBurgers">
            {{#each burgers}}
            {{#unless devoured}}
            <li data-devour="{{devour}}" class="burger list-group-item">
                <p class="{{id}}">{{burger_name}} <button type="button" style="float: right;"
                        class="devour btn btn-danger" data-id="{{id}}">Devour</button></p>
            </li>
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-md-6">
        <h1>Devoured Burgers</h1>
        <ul class=" list-group devouredBurgers">
            {{#each burgers}}
            {{#if devoured}}
            <li class="burger list-group-item">
                <p class="{{id}}">{{burger_name}}</p>
            </li>
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form>
            <div class="form-group newBurger text-center">
                <label for="burgerName"><h1>Add Burger</h1></label>
                <input type="text" class="form-control burgerName" name="name" id="burgerName"
                    aria-describedby="emailHelp" placeholder="Enter Burger Name">
            </div>
            <button type="submit" class="btn btn-success">Submit</button>
        </form>
    </div>
</div>